{
  "name": "azmanabdlh/gargantua",
  "version": "1.1.0",
  "description": "Minimalist form wizard library.",
  "keywords": ["library", "form wizard"],
  "license": "MIT",

  "authors": [
      {
          "name": "Azman Abdullah",
          "email": "azmanabdlh12@gmail.com"
      }
  ],
  "require": {
    "php": "^8.1",
    "symfony/http-foundation": "^7.1"
  },
  "scripts": {
    "test": "./vendor/bin/pest"
  },
  "require-dev": {
    "pestphp/pest": "^2.34",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "Gargantua\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gargantua\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
